{
    "extends": "airbnb",
    "plugins": ["flowtype", "react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "react/jsx-indent" : ["error", "tab"],
        "no-underscore-dangle": "off"
    }
}